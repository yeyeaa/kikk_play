<?xml version="1.0" encoding="UTF-8"?>
<resources>

    <declare-styleable name="RoundProgressBar">
        <attr name="roundColor" format="color" />
        <attr name="roundProgressColor" format="color" />
        <attr name="roundWidth" format="dimension"></attr>
        <attr name="textColor" format="color" />
        <attr name="textSize" format="dimension" />
        <attr name="max" format="integer"></attr>
        <attr name="textIsDisplayable" format="boolean"></attr>
        <attr name="style">
            <enum name="STROKE" value="0"></enum>
            <enum name="FILL" value="1"></enum>
        </attr>
    </declare-styleable>
    <declare-styleable name="RoundAngleImageView">
        <attr name="roundCircleWidth" format="dimension" />
        <attr name="roundCircleHeight" format="dimension" />
    </declare-styleable>
    <declare-styleable name="RoundedImageView">
        <attr name="corner_radius" format="dimension" />
        <attr name="border_width" format="dimension" />
        <attr name="border_color" format="color" />
        <attr name="mutate_background" format="boolean" />
        <attr name="oval" format="boolean" />
        <attr name="android:scaleType" />
    </declare-styleable>

    <!-- AutoImageSwitcher -->
    <declare-styleable name="AutoImageSwitcher">
        <attr name="ratio" format="float" />
        <attr name="auto_switch" format="boolean" />
    </declare-styleable>

    <declare-styleable name="autoRotateTextView">
        <attr name="text_size" format="dimension" />
        <attr name="text_color" format="color" />
        <attr name="gravity">
            <flag name="top" value="0x30" />
            <flag name="bottom" value="0x03" />
            <flag name="left" value="0x03" />
            <flag name="right" value="0x05" />
            <flag name="center_vertical" value="0x10" />
            <flag name="fill_vertical" value="0x70" />
            <flag name="center_horizontal" value="0x01" />
            <flag name="fill_horizontal" value="0x07" />
            <flag name="center" value="0x11" />
            <flag name="fill" value="0x77" />
            <flag name="clip_vertical" value="0x80" />
            <flag name="clip_horizontal" value="0x08" />
            <flag name="start" value="0x00800003" />
            <flag name="end" value="0x00800005" />
        </attr>

    </declare-styleable>

    <declare-styleable name="FadeTextView">
        <attr name="textview_size" format="dimension" />
        <attr name="textview_color" format="color" />
        <attr name="textview_text" format="reference|string" />
        <attr name="textview_gravity">
            <flag name="top" value="0x30" />
            <flag name="bottom" value="0x03" />
            <flag name="left" value="0x03" />
            <flag name="right" value="0x05" />
            <flag name="center_vertical" value="0x10" />
            <flag name="fill_vertical" value="0x70" />
            <flag name="center_horizontal" value="0x01" />
            <flag name="fill_horizontal" value="0x07" />
            <flag name="center" value="0x11" />
            <flag name="fill" value="0x77" />
            <flag name="clip_vertical" value="0x80" />
            <flag name="clip_horizontal" value="0x08" />
            <flag name="start" value="0x00800003" />
            <flag name="end" value="0x00800005" />
        </attr>
    </declare-styleable>

    <declare-styleable name="AutoWrapTextVieStyle">
        <attr name="lineSpace" format="dimension" />
        <attr name="maxLine" format="integer" />
        <attr name="txt_size" format="dimension" />
        <attr name="txt_color" format="color" />
    </declare-styleable>

    <declare-styleable name="IncomeSwitcherPager">
        <attr name="leftWidthWeight" format="float" />
        <attr name="marginHorWeight" format="float" />
        <attr name="marginVerWeight" format="float" />
    </declare-styleable>

    <declare-styleable name="ExperienceProgress">
        <attr name="exp_radius" format="integer" />
    </declare-styleable>
    <declare-styleable name="PagerSlidingTabStrip">
        <attr name="pstsIndicatorColor" format="color" />
        <attr name="pstsUnderlineColor" format="color" />
        <attr name="pstsDividerColor" format="color" />
        <attr name="pstsIndicatorHeight" format="dimension" />
        <attr name="pstsUnderlineHeight" format="dimension" />
        <attr name="pstsDividerPadding" format="dimension" />
        <attr name="pstsTabPaddingLeftRight" format="dimension" />
        <attr name="pstsScrollOffset" format="dimension" />
        <attr name="pstsTabBackground" format="reference" />
        <attr name="pstsShouldExpand" format="boolean" />
        <attr name="pstsTextAllCaps" format="boolean" />
        <attr name="pstsHasStroke" format="boolean" />
        <attr name="selectedTabTextColor" format="color" />
    </declare-styleable>


    <declare-styleable name="FullyTextView">
        <attr name="adjustTopForAscent" format="boolean" />
    </declare-styleable>

    <declare-styleable name="ResizableImageView">
        <attr name="resize_ratio" format="float"></attr>
        <attr name="resize_base">
            <flag name="width" value="0"></flag>
            <flag name="height" value="1"></flag>
        </attr>
    </declare-styleable>

    <declare-styleable name="CircleProgressBar">
        <attr name="cpbWholeBackgroundColor" format="color|reference" />
        <attr name="cpbForegroundColor" format="color|reference" />
        <attr name="cpbBackgroundColor" format="color|reference" />
        <attr name="cpbProgressTextColor" format="color|reference" />
        <attr name="cpbTextSize" format="dimension" />
        <attr name="cpbStrokeWidth" format="dimension" />
        <attr name="cpbMaxProgress" format="integer" />
        <attr name="cpbStartAngle" format="integer" />
        <attr name="cpbNeedAnim" format="boolean" />
        <attr name="cpbNeedShowText" format="boolean" />
        <attr name="cpbMaxAngle" format="integer" />
    </declare-styleable>

    <declare-styleable name="TimeCountDownView">
        <attr name="maxHour" format="integer" />
        <attr name="maxMinute" format="integer" />
        <attr name="maxSecond" format="integer" />
    </declare-styleable>

    <declare-styleable name="RandomRoundedImageView">
        <attr format="dimension" name="sriv_left_top_corner_radius" />
        <attr format="dimension" name="sriv_right_top_corner_radius" />
        <attr format="dimension" name="sriv_left_bottom_corner_radius" />
        <attr format="dimension" name="sriv_right_bottom_corner_radius" />
        <attr format="dimension" name="sriv_border_width" />
        <attr format="color" name="sriv_border_color" />
        <attr format="boolean" name="sriv_oval" />
        <attr name="android:scaleType" />
    </declare-styleable>

    <declare-styleable name="DropDownMenuFragmentLayout">

        <attr name="underlineColor" format="color" />
        <attr name="dividerColor" format="color" />
        <attr name="textSelectedColor" format="color" />
        <attr name="textUnselectedColor" format="color" />
        <attr name="menuBackgroundColor" format="color" />
        <attr name="maskColor" format="color" />
        <attr name="menuTextSize" format="dimension" />
        <attr name="menuSelectedIcon" format="reference" />
        <attr name="menuUnselectedIcon" format="reference" />
    </declare-styleable>

</resources>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/common_notice_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_back" >

    <ImageView
        android:id="@+id/empty_notice_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@null"
        android:contentDescription="@null"
        android:src="@drawable/notice_robot" />

    <TextView
        android:id="@+id/empty_notice_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/empty_notice_img"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/common_notic_text_margin_top"
        android:text="@string/empty_warning"
        android:textColor="#B6B6B6"
        android:textSize="@dimen/common_notic_text_size" />

</RelativeLayout>
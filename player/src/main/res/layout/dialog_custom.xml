<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dialog_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical"
    android:paddingRight="@dimen/custom_dialog_layout_padding_right">

    <RelativeLayout
        android:id="@+id/header"
        style="@style/dialog_content_header"
        android:layout_marginTop="@dimen/custom_dialog_recommend_layout_margin_top"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/title"
            style="@style/dialog_text_title_large"
            android:layout_alignParentLeft="true"
            android:visibility="gone" />

        <TextView
            android:id="@+id/subtitle"
            style="@style/dialog_text_subtitle_medium"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/title"
            android:visibility="gone" />
    </RelativeLayout>

    <View
        android:id="@+id/divider_line"
        style="@style/custom_divider_short" />

    <LinearLayout
        android:id="@+id/body"
        style="@style/dialog_content_body"
        android:gravity="left"
        android:orientation="vertical"
        android:visibility="visible">

    </LinearLayout>


    <LinearLayout
        android:id="@+id/expand_container"
        style="@style/dialog_content_expand"
        android:orientation="vertical"
        android:visibility="gone">

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/footer"
        style="@style/dialog_content_footer">

        <Button
            android:id="@+id/confirm"
            style="@style/dialog_button_long"
            android:layout_centerInParent="true"
            android:visibility="visible" />

        <LinearLayout
            android:id="@+id/dialog_custom_style_double_btns"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="visible">

            <Button
                android:id="@+id/confirm_cancel"
                style="@style/button_white_short"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textColor="@color/red_shop" />

            <Button
                android:id="@+id/add_btn"
                style="@style/button_white_short"
                android:layout_width="0dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:textColor="@color/red_shop"
                android:visibility="gone" />

            <Button
                android:id="@+id/confirm_ok"
                style="@style/button_red_short"
                android:layout_width="0dp"
                android:layout_marginRight="0dp"
                android:layout_marginTop="0dp"
                android:layout_weight="1" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>
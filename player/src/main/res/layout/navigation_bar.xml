<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minHeight="?attr/actionBarSize">

    <ImageButton
        android:id="@+id/navi_bar_left_btn"
        android:layout_width="@dimen/navi_bar_left_btn_width"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:background="@null" />

    <LinearLayout
        android:id="@+id/navi_bar_title_parent_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginLeft="@dimen/navi_bar_title_parent_view_margin_left"
        android:layout_marginRight="@dimen/navi_bar_title_parent_view_margin_right"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/navi_bar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:maxWidth="@dimen/navi_bar_title_max_width"
            android:singleLine="true"
            android:ellipsize="end"
            android:textColor="@color/white"
            android:textSize="@dimen/navi_bar_title_text_size" />

        <ImageView
            android:id="@+id/navi_bar_title_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:visibility="invisible" />
    </LinearLayout>

    <ImageButton
        android:id="@+id/navi_bar_right_btn"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/setting_relative_layout_item_padding"
        android:background="@color/transparent"
        android:contentDescription="@null"
        android:visibility="gone" />

    <TextView
        android:id="@+id/navi_bar_right_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/setting_relative_layout_item_padding"
        android:layout_centerVertical="true"
        android:textColor="@color/white"
        android:textSize="@dimen/apk_list_item_name_text_size"
        android:visibility="gone" />

</merge>

<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"><shape>
            <gradient android:angle="270" android:endColor="@color/main_grey_button_pressed" android:startColor="@color/main_grey_button_pressed" />

            <corners android:radius="1dp" />
        </shape></item>
    <item android:state_focused="true"><shape>
            <gradient android:angle="270" android:endColor="@color/main_grey_button_pressed" android:startColor="@color/main_grey_button_pressed" />

            <corners android:radius="1dp" />
        </shape></item>
    <item><shape>
            <gradient android:angle="270" android:endColor="@color/main_grey_button" android:startColor="@color/main_grey_button" />

            <corners android:radius="1dp" />
        </shape></item>

</selector>
<?xml version="1.0" encoding="UTF-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_enabled="false">
        <shape>
            <gradient android:angle="270" android:endColor="@color/main_button_newbie" android:startColor="@color/main_button_newbie" />

            <corners android:radius="2.5dp" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape>
            <gradient android:angle="270" android:endColor="@color/main_button_press" android:startColor="@color/main_button_newbie" />

            <corners android:radius="2.5dp" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape>
            <gradient android:angle="270" android:endColor="@color/main_button_press" android:startColor="@color/main_button_newbie" />

            <corners android:radius="2.5dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient android:angle="270" android:endColor="@color/main_red" android:startColor="@color/main_red" />

            <corners android:radius="2.5dp" />
        </shape>
    </item>

</selector>
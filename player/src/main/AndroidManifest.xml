<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ye.player"
    android:versionCode="1"
    android:versionName="0.0.0.1">

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".KikkApplication"
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:screenOrientation="portrait"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".splash.ui.activity.SplashActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".menu.ui.activity.MenuActivity"
            android:label="本地视频"
            android:screenOrientation="portrait">
        </activity>

        <activity
            android:name=".account.ui.LoginActivity"
            android:label="登录"
            android:screenOrientation="portrait">
        </activity>

        <activity
            android:name=".account.ui.SeetingActivity"
            android:label=""
            android:screenOrientation="portrait">
        </activity>

        <activity
            android:name=".account.ui.AboutActivity"
            android:label="关于"
            android:screenOrientation="portrait">
        </activity>

        <activity
            android:name=".account.ui.ModifyNickNameActivity"
            android:label="更改昵称"
            android:screenOrientation="portrait">
        </activity>

        <activity
            android:name=".account.ui.MyAccountActivity"
            android:label="账户信息"
            android:screenOrientation="portrait">
        </activity>

        <activity
            android:name=".account.ui.BoundPhoneActivity"
            android:label="绑定手机号"
            android:screenOrientation="portrait">
        </activity>

        <activity
            android:name=".account.ui.ModifyPasswordActivity"
            android:label="修改密码"
            android:screenOrientation="portrait">
        </activity>

        <activity
            android:name=".player.ui.PlayerActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:theme="@style/FullScreenTheme"
            android:label="@string/app_name"
            android:screenOrientation="landscape">
        </activity>


    </application>

</manifest>
